@model _23DH114304_MyStore.Models.ViewModel.HomeProductVM

<link rel="stylesheet" type="text/css" href=*-/Content/myStyle/Custonertione.css" />

<!-- Hiển thị danh sách sản phầm-->
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h2>Sản phẩm nổi bật</h2>
        <div class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="fproduct-item">
                    <div> 
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                           <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />
                        </a>
                    </div>
                    <div>
                        <p class="prodPrice">
                        @Html.DisplayFor(modelItem => product.ProductPrice)</p>

                        <p class="prodkane">
                        @Html.DisplayFor(modelItem => product.ProductName) </p>

                        <p class="prodCate">
                        @Html.DisplayFor(modelIetm => product.Category.CategoryName) </p>

                        <p class="prodSale">
                        Đã bán: &nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)</p>
                    </div>
                </div>
            }
        </div>
    </section>
<hr />
}